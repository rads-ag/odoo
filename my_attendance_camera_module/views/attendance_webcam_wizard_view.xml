<odoo>
    <record id="view_attendance_webcam_wizard_form" model="ir.ui.view">
        <field name="name">attendance.webcam.wizard.form</field>
        <field name="model">attendance.webcam.wizard</field>
        <field name="arch" type="xml">
            <form string="Attendance Webcam Wizard">
                <sheet>
                    <group>
                        <field name="camera_device"/>
                        <field name="image_capture" widget="image" class="oe_avatar" options="{'preview_image': 'image_capture'}"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Capture Image" type="object" name="capture_image" class="btn-primary"/>
                    <button string="Confirm" type="object" name="confirm_attendance" class="btn-secondary"/>
                    <button string="Cancel" class="btn-link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>